<body id="days-grid-area">
    <header class="days-header">
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/menu">Menu</a></li>
            </ul>
        </nav>
        <section>
            <h1>01/01/2021</h1>
        </section>
    </header>

    <main class="days-main">
        <!-- Form to add the notes inside the db -->
        <form class="days-main-add-note" action="/01012021" method="POST">
            <label for="note">Add note</label>
            <br>
            <input type="text" id="note" name="note">
            <br>
            <input type="submit">
        </form>

        <!-- Outputs notes from the db if them exists -->
        <% if (notes.length > 0) { %>
            <% notes.forEach(note => { %>
                <section>
                    <form class="days-main-remove-note" action="/01012021" method="POST">
                        <input type="submit" name="delete" value="X">
                    </form>
                    <h2><%= note %></h2>
                </section>
            <% }) %>
        <% } else { %>
            <h2>You've not any notes for today</h2>
        <% } %>
    </main>

