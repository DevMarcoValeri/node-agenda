<body id="days-grid-area">
    <header class="days-header">
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/menu">Menu</a></li>
            </ul>
        </nav>
        <section>
            <h1><%= date %></h1>
        </section>
    </header>

    <main class="days-main">
        <!-- Input notes -->
        <form action="/01012021" method="POST">
            <label for="note">Add note</label>
            <br>
            <input type="text" id="note" name="note">
            <br>
            <input type="submit">
        </form>

        <!-- Output all notes from the db if they exist -->
        <% if (notes.length > 0) { %>
            <% notes.forEach(note => { %>
                <section>
                    <h2><%= note %></h2>
                </section>
            <% }) %>
        <% } else { %>
            <h2>Nothing in agenda</h2>
        <% } %>
    </main>

<!-- Include footer.ejs -->
<%- include('../includes/footer.ejs'); %>